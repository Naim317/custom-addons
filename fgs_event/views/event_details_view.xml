<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Search Filter -->
        <record id="event_details_search_view" model="ir.ui.view">
            <field name="name">event.details.search.view</field>
            <field name="model">event.details</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="region"/>
                </search>
            </field>
        </record>


        <!-- Tree View -->
        <record id="event_details_tree_view" model="ir.ui.view">
            <field name="name">event.details.tree.view</field>
            <field name="model">event.details</field>
            <field name="arch" type="xml">
                <tree string="Event Details">
                    <field name="name"/>
                    <field name="region"/>
                    <field name="description"/>
                    <field name="attachment"/>
                </tree>
            </field>
        </record>


        <!-- Form View -->
        <record id="event_details_form_view" model="ir.ui.view">
            <field name="name">event.details.form.view</field>
            <field name="model">event.details</field>
            <field name="arch" type="xml">
                <form string="Event Details">
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="region"/>
                        </group>
                        <group>
                            <field name="description"/>
                            <field name="attachment"/>
                        </group>
                    </group>
                </form>
            </field>
        </record>


        <!-- Act Window & Menu Configuration -->
        <record id="action_event_details_view" model="ir.actions.act_window">
            <field name="name">Event Details</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">event.details</field>
            <field name="domain">[]</field>
            <!-- <field name="view_type">form</field> -->
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="event_details_tree_view"/>
        </record>

    </data>
</odoo>
