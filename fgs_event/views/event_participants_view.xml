<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="event_participants_search_view" model="ir.ui.view">
            <field name="name">event.participants.search.view</field>
            <field name="model">event.participants</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="email"/>
                </search>
            </field>
        </record>
        <!-- Tree View -->
        <record id="event_participants_tree_view" model="ir.ui.view">
            <field name="name">event.participants.tree.view</field>
            <field name="model">event.participants</field>
            <field name="arch" type="xml">
                <tree string="Event Participants">
                    <field name="name"/>
                    <field name="email"/>
                    <field name="message"/>
                </tree>
            </field>
        </record>
        <!-- Form View -->
        <record id="event_participants_form_view" model="ir.ui.view">
            <field name="name">event.participants.form.view</field>
            <field name="model">event.participants</field>
            <field name="arch" type="xml">
                <form string="Event Participants">
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="email"/>
                        </group>
                        <group>
                            <field name="message"/>
                        </group>
                    </group>
                </form>
            </field>
        </record>
        <!-- Act Window & Menu Configuration -->
        <record id="action_event_participants_view" model="ir.actions.act_window">
            <field name="name">Event Participants</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">event.participants</field>
            <field name="domain">[]</field>
            <!-- <field name="view_type">form</field> -->
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="event_participants_tree_view"/>
        </record>
    </data>
</odoo>

