<!--                                    Hi Aiden, how are you? How is the-->
<!--                                    project coming along?-->
<!--                                </div>-->
<!--                            </li>-->
<!--                            <li class="clearfix" t-foreach="agm.agm_chat_ids" t-as="value_chat">-->
