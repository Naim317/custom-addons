<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Search Filter -->
        <record id="academy_main_search_view" model="ir.ui.view">
            <field name="name">academy.academy.search.view</field>
            <field name="model">academy.main</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="email"/>
                    <field name="admission_year"/>
                </search>
            </field>
        </record>


        <!-- Tree View -->
        <record id="academy_main_tree_view" model="ir.ui.view">
            <field name="name">academy.main.tree.view</field>
            <field name="model">academy.main</field>
            <field name="arch" type="xml">
                <tree string="Academy Main">
                    <field name="name"/>
                    <field name="email"/>
                    <field name="group_leader"/>
                    <field name="major_subject" />
                    <field name="phone"/>
                    <field name="admission_year"/>
                </tree>
            </field>
        </record>


        <!-- Form View -->
        <record id="academy_main_form_view" model="ir.ui.view">
            <field name="name">academy.main.form.view</field>
            <field name="model">academy.main</field>
            <field name="arch" type="xml">
                <form string="Academy Main">
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="email"/>
                            <field name="b_day"/>
                            <field name="group_members"/>
                            <field name="group_leader"/>
                            <field name="university"/>
                            <field name="phone"/>
                            <field name="address"/>
                            <field name="regular_student"/>

                        </group>
                        <group>
                            <field name="department"/>
                            <field name="faculty"/>
                            <field name="fb_name"/>
                            <field name="fb_link" widget="url"/>
                            <field name="cgpa"/>
                            <field name="admission_year"/>
                            <field name="major_subject"/>
                            <field name="number_of_awards"/>
                            <field name="fees"/>
                        </group>
                    </group>
                    <group>
                        <field name="group_slogan"/>
                    </group>
                    <group>
                        <field name="teacher_remarks"/>
                    </group>
                </form>
            </field>
        </record>


        <!-- Act Window & Menu Configuration -->
        <record id="action_academy_main_view" model="ir.actions.act_window">
            <field name="name">Academy Main</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">academy.main</field>
            <field name="domain">[]</field>
            <!-- <field name="view_type">form</field> -->
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="academy_main_tree_view"/>
        </record>

    </data>
</odoo>