<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="registration_policy_search_view" model="ir.ui.view">
            <field name="name">registration.policy.search.view</field>
            <field name="model">registration.policy</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="description"/>
                    <field name="attachment"/>
                </search>
            </field>
        </record>
        <!-- Tree View -->
        <record id="registration_policy_tree_view" model="ir.ui.view">
            <field name="name">registration.policy.tree.view</field>
            <field name="model">registration.policy</field>
            <field name="arch" type="xml">
                <tree string="Research &amp; SDGs Policy">
                    <field name="name"/>
                </tree>
            </field>
        </record>
        <!-- Form View -->
        <record id="registration_policy_form_view" model="ir.ui.view">
            <field name="name">registration.policy.form.view</field>
            <field name="model">registration.policy</field>
            <field name="arch" type="xml">
                <form string="Research &amp; SDGs Policy">
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="attachment" widget='pdf_viewer' />
                    </group>
                </form>
            </field>
        </record>
        <!-- Act Window & Menu Configuration -->
        <record id="action_registration_policy_view" model="ir.actions.act_window">
            <field name="name">Research &amp; SDGs Policy</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">registration.policy</field>
            <field name="domain">[]</field>
            <!-- <field name="view_type">form</field> -->
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="registration_policy_tree_view"/>
        </record>
    </data>
</odoo>

