<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="person_info_search_view" model="ir.ui.view">
            <field name="name">person.info.search.view</field>
            <field name="model">person.info</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="email"/>
                </search>
            </field>
        </record>
        <!-- Tree View -->
        <record id="person_info_tree_view" model="ir.ui.view">
            <field name="name">person.info.tree.view</field>
            <field name="model">person.info</field>
            <field name="arch" type="xml">
                <tree string="Person Information">
                    <field name="name"/>
                    <field name="email"/>
                    <field name="message"/>
                </tree>
            </field>
        </record>
        <!-- Form View -->
        <record id="person_info_form_view" model="ir.ui.view">
            <field name="name">person.info.form.view</field>
            <field name="model">person.info</field>
            <field name="arch" type="xml">
                <form string="Person Information">
                    <group>
                        <field name="name"/>
                        <field name="email"/>
                        <field name="message"/>
                    </group>
                </form>
            </field>
        </record>
        <!-- Act Window & Menu Configuration -->
        <record id="action_person_info_view" model="ir.actions.act_window">
            <field name="name">Person Information</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">person.info</field>
            <field name="domain">[]</field>
            <!-- <field name="view_type">form</field> -->
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="person_info_tree_view"/>
        </record>
    </data>
</odoo>

